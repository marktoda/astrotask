{
  "name": "@astrotask/mcp",
  "version": "1.1.0",
  "type": "module",
  "description": "MCP Server for Taskmaster AI",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "@astrotask/mcp": "dist/index.js",
    "astrotask-mcp": "dist/index.js",
    "astrotask-mcp-stdio": "dist/stdio.js",
    "astrotask-mcp-http": "dist/http.js"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "start": "node dist/index.js",
    "start:stdio": "node dist/stdio.js",
    "start:http": "node dist/http.js",
    "type-check": "tsc --noEmit",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format src/",
    "format:fix": "biome format --write src/",
    "verify": "npm run type-check && npm run lint && npm run format && npm run build && npm run test",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "mcp",
    "taskmaster",
    "ai",
    "astrotask"
  ],
  "author": "Astrolabe Team",
  "license": "MIT",
  "dependencies": {
    "@astrotask/core": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "express": "^4.19.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "rimraf": "^5.0.5",
    "biome": "^0.3.3"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
