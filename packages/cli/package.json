{
	"name": "@astrolabe/cli",
	"version": "0.0.0",
	"license": "MIT",
	"bin": "dist/cli.js",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"start": "node ./dist/cli.js",
		"lint": "biome check source/",
		"lint:fix": "biome check --write source/",
		"format": "biome format source/",
		"format:fix": "biome format --write source/",
		"dev": "tsc --watch",
		"test": "echo test",
		"test:watch": "echo test",
		"type-check": "tsc --noEmit",
		"verify": "pnpm type-check && pnpm lint:fix && pnpm format:fix && pnpm build && pnpm test"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"ink": "^4.1.0",
		"pastel": "^2.0.0",
		"react": "^18.2.0",
		"zod": "^3.21.4",
		"@astrolabe/core": "workspace:*"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/react": "^18.0.32",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3",
		"vitest": "^2.1.8",
		"xo": "^0.54.2"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
