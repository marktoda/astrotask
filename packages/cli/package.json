{
	"name": "@astrotask/cli",
	"version": "1.0.2",
	"license": "MIT",
	"bin": {
		"astro": "dist/cli.js"
	},
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc && cp -r templates dist/",
		"dev": "tsc --watch",
		"start": "node dist/cli.js",
		"dashboard": "TERM=xterm-256color NODE_NO_WARNINGS=1 node dist/cli.js dashboard",
		"lint": "biome check source/",
		"lint:fix": "biome check --write source/",
		"format": "biome format source/",
		"format:fix": "biome format --write source/",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"tui": "NODE_NO_WARNINGS=1 TERM=xterm-256color node dist/cli.js tui",
		"tui:debug": "NODE_NO_WARNINGS=1 TERM=xterm-256color DEBUG_KEYS=1 node dist/cli.js tui"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@astrotask/core": "workspace:*",
		"blessed": "^0.1.81",
		"chalk": "^5.2.0",
		"fast-diff": "^1.3.0",
		"ink": "^4.1.0",
		"ink-gradient": "^2.0.0",
		"ink-select-input": "^5.0.0",
		"ink-text-input": "^5.0.1",
		"pastel": "^2.0.0",
		"react": "^18.2.0",
		"zod": "^3.21.4",
		"zustand": "^4.4.7"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/blessed": "^0.1.25",
		"@types/react": "^18.0.32",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3",
		"vitest": "^2.1.8",
		"xo": "^0.54.2"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config",
	"publishConfig": {
		"access": "public"
	}
}
