{
  "name": "@astrolabe/core",
  "version": "0.1.0",
  "description": "A local-first, MCP-compatible task-navigation platform for humans + AI agents",
  "main": "dist/index.js",
  "type": "module",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc && cp -r drizzle dist/",
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "type-check": "tsc --noEmit",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format src/",
    "format:fix": "biome format --write src/",
    "verify": "pnpm type-check && pnpm lint:fix && pnpm format:fix && pnpm build && pnpm test",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:electrify": "node scripts/patch-electrify.js",
    "db:migrate:remote": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:setup": "pnpm db:generate && pnpm db:electrify",
    "db:deploy": "pnpm db:setup && pnpm db:migrate:remote"
  },
  "keywords": [
    "task-management",
    "local-first",
    "mcp",
    "typescript",
    "offline-first",
    "astrolabe"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.15.21",
    "drizzle-kit": "^0.31.1",
    "pg": "^8.16.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@electric-sql/client": "^1.0.4",
    "@electric-sql/pglite": "^0.3.2",
    "@electric-sql/pglite-sync": "^0.3.5",
    "@langchain/community": "^0.3.19",
    "@langchain/core": "^0.3.57",
    "@langchain/openai": "^0.5.11",
    "@modelcontextprotocol/sdk": "^1.12.0",
    "@prisma/client": "6.7.0",
    "clipanion": "4.0.0-rc.4",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "langchain": "^0.3.27",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "prisma": "^6.8.2",
    "react": "^19.1.0",
    "tiktoken": "^1.0.3",
    "zod": "^3.25.28",
    "zod-config": "^1.0.0"
  }
}
